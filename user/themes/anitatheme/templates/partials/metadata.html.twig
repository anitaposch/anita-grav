{% if header.metadata is not empty %}
    {% for key, value in header.metadata %}
        <meta name="{{ key }}" content="{{ value }}" />
    {% endfor %}
{% else %}
    <meta name="description" content="{{ header.summary|e }}" />
    <meta name="generator" content="{{ site.title|e }}" />
    <meta name="author" content="{{ site.author.name|e }}" />
    <meta property="og:title" content="{{ header.title|e }}" />
    <meta name="og:description" content="{{ header.summary|e }}" />
    <meta property="og:url" content="{{ page.canonical(true)|e }}" />
    {% if page.header.thumbnail %}
        <meta property="og:image" content="{{ header.thumbnail }}" />
    {% endif %}
{% endif %}
