                            <!-- Thumbnail -->
                            {% if article.header.thumbnail %}
                                {% set thumbnail_found = false %}
                                {% set thumbnail_url = '' %}

                                <!-- Clean the thumbnail filename: remove leading slash, convert to lowercase -->
                                {% set thumbnail_clean = article.header.thumbnail %}
                                {% if thumbnail_clean starts with '/' %}
